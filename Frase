package exeum;

/**
 *
 * @author wylla
 */
public class ValidaImposto {
    
    public static double calculaImposto(double valorBase, String nomeImposto){
        double taxaBase = calculaImposto(nomeImposto);
        double valorImposto = (valorBase + taxaBase/100);
        return valorImposto;
        
    }
    
    public static double calculaImposto(String nomeImposto){
        double impostoRetorno = 0;
        switch (nomeImposto.toUpperCase()){
            case "INSS":
                impostoRetorno = 8;
            break;
            case "IR":
                impostoRetorno = 20;
            break;
         
        }
        return impostoRetorno;
    }
    
    
    
}
